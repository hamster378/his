<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".van"
    android:background="@drawable/fon">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="326dp"
        android:layout_height="73dp"
        android:text="Английский мореплаватель Джордж Ванкувер"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="322dp"
        android:layout_height="116dp"
        android:layout_marginBottom="86dp"
        android:background="#FFFFFFFF"
        android:text="Джон Ванкувер – известный английский мореплаватель, исследователь Тихого океана, ставший одним из первооткрывателей Северной Америки. Ему удалось создать точные карты и описания этого региона, собрать большое количество информации, которая оказала большую помощь при дальнейшем его изучении."
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="377dp"
        android:layout_height="223dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fullsize" />
</androidx.constraintlayout.widget.ConstraintLayout>