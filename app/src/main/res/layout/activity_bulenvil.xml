<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bulenvil"
    android:background="@drawable/fon">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="308dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:text="Луи Антуан де Бугенвиль"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="156dp"
        android:layout_height="171dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boug" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="312dp"
        android:layout_height="101dp"
        android:layout_marginBottom="112dp"
        android:background="#FFFFFFFF"
        android:text="Первая французская кругосветная экспедиция (Луи Антуан де Бугенвиль) открыла острова в архипелагах Туамоту и Луизиада."
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>